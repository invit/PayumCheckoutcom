{% if type == 'FRAME' %}
    <script src="{{ framesjsPath }}"></script>

    <script type="text/javascript">
        var PAYUM = PAYUM || {};

        PAYUM.CHECKOUTCOM = {
            getFrames: function () {
                return window.Frames;
            },
            initFrames: function (conf) {
                conf.publicKey = '{{ publishableKey }}';
                Frames.init(conf);
            },
        };
    </script>
{% elseif type == 'LIGHTBOX' %}
    <script src="{{ checkoutjsPath }}"></script>

    <script type="text/javascript">
        var PAYUM = PAYUM || {};

        PAYUM.CHECKOUTCOM = {
            getCheckout: function () {
                return window.Checkout;
            },
            configureLightbox: function (conf) {
                conf.publicKey = '{{ publishableKey }}';
                Checkout.configure(conf);
            },
            openLightbox: function () {
                Checkout.open();
            },
        };
    </script>
{% endif %}
